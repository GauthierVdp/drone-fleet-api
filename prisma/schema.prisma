generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Drone {
  id        Int      @id @default(autoincrement())
  name      String
  type      String
  status    String
  fleetId   Int
  missionId Int?
  fleet     Fleet    @relation(fields: [fleetId], references: [id])
  mission   Mission? @relation(fields: [missionId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Fleet {
  id      Int      @id @default(autoincrement())
  name    String
  location String?
  drones  Drone[]
}

model Mission {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  status      String
  startDate   DateTime
  endDate     DateTime?
  drones      Drone[]
}
